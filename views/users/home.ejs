                       <h4><%= home.title %></h4>
                   </div>
                   <p>
                       <a href="/homes/<%= home._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
      </div>
</div>

    
